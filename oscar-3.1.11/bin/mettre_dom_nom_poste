#else
	cherche_fichiers_oscar_sous_windows
	option_newsid="/a"
	if [ "$Poste_OSCAR" = "" ]
	then
		option_newsid=
	fi
	echo "        if not exist %partition_ecrire_oscar%:\oscar_modifstartup_nom.reg goto fin
	if not exist C:\oscar\ mkdir C:\oscar
	if not exist C:\oscar\newsid.exe copy %partition_ecrire_oscar%:\demarre_oscar\newsid.exe C:\oscar\newsid.exe
	if not exist C:\oscar\newsid.exe goto pas_newsid
	REGEDIT /s %partition_ecrire_oscar%:\oscar_modifstartup_nom.reg" > /tmp/fin_cherche_oscar_modifstartup_nom.reg

	echo "C:\oscar\newsid.exe $option_newsid $Poste_OSCAR" > /tmp/lance_newsid
