# oscar.bat fichier réalisé au premier démarrage

echo "`cat /tmp/cherche_oscar_modifstartup_nom.reg`
`cat /tmp/fin_cherche_oscar_modifstartup_nom.reg`
`cat /tmp/netsh_oscar_bat`
