## Outil Système Complet d'Assistance Réseau: OSCAR
## Rapide de Sauvegarde aux Ordinateurs et Systèmes: RapideSOS
## Ce programme est sous Licence Publique Générale GNU publiée par la Free Software Foundation.

PATH="/usr/share/oscar/bin:$PATH"
if ( test -e /usr/share/oscar/usr/choix_langue )
then
	choix_langue=`cat /usr/share/oscar/usr/choix_langue`
else
	echo "fr" > /usr/share/oscar/usr/choix_langue
	choix_langue=fr
	traduction
fi
chemin_langue=/usr/share/oscar/usr/langue/$choix_langue


#
#-----------------------------------------------------------------------------------------------------
main() # boucle principale
{
	# Information pour automatiser les \Z3noms\Z4 et \Z3domaine
	DIALOGRC="/etc/dialogmenu_bloque" dialog --colors \
	--backtitle "`cat /etc/banniere_oscar`" \
	--cancel-label "`cat $chemin_langue/Annuler`" --ok-label "`cat $chemin_langue/menu_418`" --extra-button --extra-label "`cat $chemin_langue/menu_419`" \
	--menu "\n\Zb\Z4   `cat $chemin_langue/menu_420`\Z4 \n\n" 10 80 0 \
	"" "" \
	"" "\Zb`cat $chemin_langue/menu_421`\Zn : " \
	"" "`cat $chemin_langue/menu_422`" \
	"" "" \
	"" "\Zb`cat $chemin_langue/menu_423`\Zn : " \
	"" "`cat $chemin_langue/menu_424`" \
	"" "`cat $chemin_langue/menu_425` : " \
	"" "\Zb\Z3     http://www.microsoft.com \Zn " \
	"" "`cat $chemin_langue/menu_426` : " \
	"" "\Zb\Z3     C:\\oscar\\ \Zn " \
	"" "`cat $chemin_langue/menu_427`." \
	"" "`cat $chemin_langue/menu_428`" \
	"" ""
      case $? in
	    0)	rm -f domaine
	    	echo "non" > domaine ;; # nommer les postes
	    3)  rm -f domaine
	    	echo "oui" > domaine ;; # Noms et domaines
	    1)	rm -f domaine
	    	echo "sortir" > domaine
	    	exit;; 
	    255) rm -f domaine
	    	echo "sortir" > domaine
	    	exit ;;
	esac
}
#-----------------------------------------------------------------------------------------------------

#----------------------------------------------------------------------------------------------------
#                   BOUCLE PRINCIPALE
#----------------------------------------------------------------------------------------------------
#---------------------------------------------------------------------------------------------------
reponse_lettre=`cat /tmp/partition_oscar_lettre_win`
main
