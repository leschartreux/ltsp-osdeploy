if ( test -e /usr/share/oscar/usr/choix_langue )
then
	choix_langue=`cat /usr/share/oscar/usr/choix_langue`
else
	echo "fr" > /usr/share/oscar/usr/choix_langue
	choix_langue=fr
	traduction
fi
chemin_langue=/usr/share/oscar/usr/langue/$choix_langue


#	--cancel-label "Choisir une souris" \
#	--extra-button --extra-label "`cat $chemin_langue/Annuler`" \

# Informations sur les partitions
if ( test -e /root/sysresccd-pkg.txt )	# démarrage cd sysrcd avec ou sans option cdcache ou démarrage sur le poste si sysrcd
then	# menu pour sysrcd:
	DIALOGRC="/etc/dialogmenu_bloque" dialog --colors --ok-label "`cat $chemin_langue/Continuer`" \
	--cancel-label "`cat $chemin_langue/Annuler`" \
	--backtitle "`cat /etc/banniere_oscar`" \
	--title " `cat $chemin_langue/menu_411` " \
	--menu " \n \Zb\Z1                              `cat $chemin_langue/ATTENTION` : \n " 10 80 0 \
	"" "" \
	"" "\Z2`cat $chemin_langue/menu_412`\Z2" \
	"" "\Z2`cat $chemin_langue/menu_413`. " \
	"" "" \
	"" "\Z1`cat $chemin_langue/Remarques` : " \
	"" "\Zn\Z2`cat $chemin_langue/menu_414` \Zb\Z4ext3\Zn\Z2, \Zb\Z4ext4\Zn\Z2. " \
	"" "\Zn\Z2`cat $chemin_langue/menu_415` \Zb\Z4ntfs\Zn\Z2. " \
	"" "\Z1`cat $chemin_langue/Important` : " \
	"" "\Z2`cat $chemin_langue/menu_416`. " \
	"" "\Z2`cat $chemin_langue/menu_417`. " \
	"" ""
	case $? in
	0) ;;
	1) echo "" > /tmp/sortir ;;
	255) echo "" > /tmp/sortir ;;
	esac
else
	# Informations sur les partitions
	DIALOGRC="/etc/dialogmenu_bloque" dialog --colors --ok-label "`cat $chemin_langue/Continuer`" \
	--cancel-label "`cat $chemin_langue/Annuler`" \
	--backtitle "`cat /etc/banniere_oscar`" \
	--title " `cat $chemin_langue/menu_411` " \
	--menu "\n \Zb\Z1                              ATTENTION : \n " 12 80 0 \
	"" "" \
	"" "\Z2Pour pouvoir restaurer des postes\Z4 CLIENTS\Z2 à partir d'une sauvegarde " \
	"" "\Z2partagée par un\Z4 SERVEUR\Z2, il faut que\Z1 TOUTES\Z2 les\Z1 partitions à restaurer " \
	"" "\Z2(souvent Windows) de\Z1 TOUS \Z2les\Z4 postes clients \Z2soient de la même\Z1 TAILLE\Z2. " \
	"" "" \
	"" "" \
	"" "\Z1`cat $chemin_langue/Remarques` : " \
	"" "" \
	"" "\ZnLa partition\Z2 linux\Zn est du type\Z2 ext3 \Znou \Z2ext4" \
	"" "\ZnLa partition\Z2 windows\Zn est du type\Z2 fat32\Zn ou\Z2 ntfs " \
	"" "" \
	"" "\Z1`cat $chemin_langue/Important` : " \
	"" "" \
	"" "\Zb\Z2Pour modifier les partitions elles doivent TOUTES être\Zb\Z1 démontées. " \
	"" "\Zb\Z2Après chaque modification de taille ou de position \Zb\Z7redémarrez\Z2 le poste. " \
	"" "" \
	"" "\Z1Carte graphique non reconnue : " \
	"" "" \
	"" "\ZnSi votre carte graphique n'est pas reconnue\Z1 pour revenir\Zn, " \
	"" "\Zntapez simultanément sur les touches \Zb\Z7Alt_Ctrl_F1 \Znou \Zb\Z7Alt_Ctrl_F2\Zn. " \
	"" "\ZnPuis utilisez les commandes \Zb\Z4taille_partition \Znet \Zb\Z4table_partitions\Zn. " \
	"" ""
	case $? in
	0) ;;
	1) echo "" > /tmp/sortir ;;
	255) echo "" > /tmp/sortir ;;
	esac
fi
