## Outil Système Complet d'Assistance Réseau: OSCAR
## Rapide de Sauvegarde aux Ordinateurs et Systèmes: RapideSOS
## Ce programme est sous Licence Publique Générale GNU publiée par la Free Software Foundation.

PATH="/usr/share/oscar/bin:$PATH"
if ( test -e /usr/share/oscar/usr/choix_langue )
then
	choix_langue=`cat /usr/share/oscar/usr/choix_langue`
else
	echo "fr" > /usr/share/oscar/usr/choix_langue
	choix_langue=fr
	traduction
fi
chemin_langue=/usr/share/oscar/usr/langue/$choix_langue
#
#-----------------------------------------------------------------------------------------------------
main() # boucle principale
{
	# Erreur de version OSCAR du client
	DIALOGRC="/etc/dialogmenu_bloque" dialog --colors \
	--backtitle "`cat /etc/banniere_oscar`" \
	--ok-label "`cat $chemin_langue/Continuer`" --no-cancel \
	--title " `cat $chemin_langue/menu_629` " \
	--menu "\n\Zb\Z1   `cat $chemin_langue/menu_630` \n\n" 10 70 0 \
	"" "" \
	"" "" \
	"" "\Z2`cat $chemin_langue/menu_631` \Zb\Z3$version_oscar\Zn\Z2, " \
	"" "" \
	"" "\Z2`cat $chemin_langue/menu_632` \Zb\Z3$version_oscar_envoyee\Zn. " \
	"" "" \
	"" "" \
	"" "\Z2`cat $chemin_langue/menu_635`. " \
	"" "" \
	"" ""
      case $? in
	    0)	 echo "" > /tmp/sortir
	    exit
	    ;;
	    255) echo "" > /tmp/sortir
	    exit
	    ;;
	esac
}
#-----------------------------------------------------------------------------------------------------
#-----------------------------------------------------------------------------------------------------
#                   BOUCLE PRINCIPALE
#-----------------------------------------------------------------------------------------------------
#-----------------------------------------------------------------------------------------------------
version_oscar_envoyee=`cat version_oscar_envoyee`
rm -f version_oscar_envoyee
version_oscar=`cat /usr/share/oscar/usr/numero_version_oscar`
main