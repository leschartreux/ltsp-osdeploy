PATH="/usr/share/oscar/bin:$PATH"
if ( test -e /usr/share/oscar/usr/choix_langue )
then
	choix_langue=`cat /usr/share/oscar/usr/choix_langue`
else
	echo "fr" > /usr/share/oscar/usr/choix_langue
	choix_langue=fr
	traduction
fi
chemin_langue=/usr/share/oscar/usr/langue/$choix_langue

# demarrage cdrom
# mkdir /tftpboot/tmp_oscar_nfs	# seulement pour le poste ne pas mettre de sous repertoire pour le cdrom
if ( test -e /etc/demarrage_cdrom ) || ( test -e /etc/demarrage_usb )
then
	echo "/tftpboot *(fsid=0,rw,sync,no_subtree_check)" > /etc/exports
else
	# non ok mais utiliser la partition oscar si elle existe:
	echo "/mnt/sdai_oscar/oscar *(rw,sync,no_root_squash)" >> /etc/exports
fi

/etc/init.d/nfs restart 1>/dev/null 2>/dev/null