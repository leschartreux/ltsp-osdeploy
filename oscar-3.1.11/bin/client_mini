# démonte le lecteur de disquette

ip_serveur=192.168.0.101

mkdir /mnt/client_essai

echo ip_serveur=$ip_serveur
/etc/init.d/nfs restart
mount "$ip_serveur":/mnt/serveur_essai /mnt/client_essai
sleep 2
ls /mnt/client_essai