PATH="/usr/share/oscar/bin:$PATH"




#----------------------------------------------------------------------------------------------------
eteindre_le_poste()
{


	DIALOGRC="/etc/dialogmenu_bloque" dialog --colors \
	--backtitle "`cat /etc/banniere_oscar`" \
	--title " Le poste s'éteint " \
	--infobox "\n\n\n\Zb\Z2      Patientez le poste s'éteint proprement... \n\n\n\n" 0 0

if ( test -e /etc/cdrom_ejecte )
then
	eject -t
fi
umount -a 2>/dev/null ; sync
halt
sleep 5
exit
}
#----------------------------------------------------------------------------------------------------
boucle()  # retour au programme principal
{
echo
echo
echo -e "\033[1;34mpour faire défiler l'écran utilisez \033[1;37m Maj_PgUp \033[1;34m ou \033[1;37m Maj_PgDn\033[1;m"
echo -ne "\033[1;34mappuyez sur la touche\033[1;37m Entrée \033[1;34mpour continuer...\033[1;m"
read reponse
}
#----------------------------------------------------------------------------------------------------

PATH="/usr/share/oscar/bin:$PATH"
#if ! ( test -e /etc/exec_dialog_src )  # si depart par oscar
#then
	/usr/share/oscar/usr/version_theme_oscar
#fi
#echo "" > /etc/oscar
sauve
boucle
eteindre_le_poste
