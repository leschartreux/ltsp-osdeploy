# lancement par l'autorun de lilo



#  l'autorun restaure la partition hdax à partir de l'image située sur la partition linux

#----------------------------------------------------------------------------------------------------
eteindre_le_poste()
{
	DIALOGRC="/etc/dialogmenu_bloque" dialog --colors \
	--backtitle "`cat /etc/banniere_oscar`" \
	--title " Le poste s'éteint " \
	--infobox "\n\n\n\Zb\Z2      Patientez le poste s'éteint proprement... \n\n\n\n" 0 0

if ( test -e /etc/cdrom_ejecte )
then
	eject -t
fi
umount -a 2>/dev/null ; sync
halt
sleep 5
exit
}
#-----------------------------------------------------------------------------------------------------


PATH="/usr/share/oscar/bin:$PATH"



	setterm -powerdown       # setterm -powersave off   # supprime l'écran de veille
	setterm -msg off         # n'affiche pas les messages d'erreurs
rm -f /tmp/historique
rm -f /tmp/montage_cle_usb	#initialise liste clés USB
if ! ( test -e /etc/banniere_oscar )  # si depart par lilo_multi la premiere fois
then
	/usr/share/oscar/usr/version_theme_oscar
	cp -f /usr/share/oscar/usr/exec_dialog_src /etc		
	cp -f /usr/share/oscar/usr/dialogrc /etc
	cp -f /usr/share/oscar/usr/dialogmenu_bloque /etc

#	echo "" > /etc/mi_co	# quitter autorun
	echo "" > /etc/oscar
	echo "" > /etc/cdrom_ejecte	# cd ejecté
fi

#heure=$(date +%k:%M)
	DIALOGRC="/etc/dialogmenu_bloque" dialog --colors \
	--backtitle "`cat /etc/banniere_oscar`" \
	--title " OSCAR " \
	--ok-label "Continuer"  \
	--msgbox "\n\n\Z2Copyright (c) 2004 (Tissoires Jean-François & Benjamin)\Zb\Z2 jftissoires@gmail.com\Zn \
	\n\Zn\Zb\Z1O\Z3util\Zb\Z1 S\Z3ystème \Zb\Z1C\Z3omplet d'\Zb\Z1A\Z3ssistance\Zb\Z1 R\Z3éseau, \Zb\Z1OSCAR \
	\n\Zn\Z2Cdrom \Zb\Z1Rapide \Z3de\Zb\Z1 S\Z3auvegarde aux\Zb\Z1 O\Z3rdinateurs et\Zb\Z1 S\Z3ystèmes, \Zb\Z1RapideSOS\n \
	\Zn\n\n \Zb\Z1INFORMATION : \Zn \n\n \
	\Zn\Z2Vous pouvez utiliser les menus d'\Zb\Z3OSCAR \n\n \
	\Zn\Z2    Vous disposerez de toutes les commandes mais la\n \
	\Zn\Z2    commande \Zb\Z7client_cloné\Zn\Z2 ne fonctionnera pas ! \n\n\n \
	\Zn\Z2Vous pouvez utiliser la commande \Zb\Z7client_multi \Zn\Z2(abrégé \Zb\Z7clml\Zn\Z2) \n\n \
	\Zb\Z1ATTENTION\Zn\Z2 en \Zb\Z4continuant \Zn\Z2vous devrez taper au clavier \Zb\Z7client_multi \n \
	\Zn\Z2ou \Zb\Z7oscar \Zn\Z2à l'apparition de : \Zb\Z1 OSCAR \Z4~ # " 25 74
	case $? in
	    0) 	exit;;
	    255) exit;;
	esac
	
