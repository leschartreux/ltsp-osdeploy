PATH="/usr/share/oscar/bin:$PATH"



#  lancer la souris

if ! ( test -e /tmp/souris_installee )
then
cp -f /etc/init.d/gpm /etc/init.d/gpm_bon
echo "MOUSE=ps2" >> /etc/init.d/gpm
echo "MOUSEDEV=/dev/psaux" >> /etc/init.d/gpm
/etc/init.d/gpm start
echo "souris activee" > /tmp/souris_installee
fi