PATH="/usr/share/oscar/bin:$PATH"
if ( test -e /usr/share/oscar/usr/choix_langue )
then
	choix_langue=`cat /usr/share/oscar/usr/choix_langue`
else
	echo "fr" > /usr/share/oscar/usr/choix_langue
	choix_langue=fr
	traduction
fi
chemin_langue=/usr/share/oscar/usr/langue/$choix_langue


#----------------------------------------------------------------------------------------------------
boite_commentaire()
{
	# Mauvaise définition d'affichage
	DIALOGRC="/etc/dialogmenu_bloque" dialog --colors \
	--backtitle "`cat /etc/banniere_oscar`" \
	--title " `cat $chemin_langue/menu_636` " \
	--ok-label "`cat $chemin_langue/Continuer`" --cancel-label "`cat $chemin_langue/wizar`" \
	--extra-button --extra-label "`cat $chemin_langue/Xfce`" \
	--menu "\n\Zb\Z3 `cat $chemin_langue/menu_637`\Zn \n " 10 72 0 \
	"" "\Z2`cat $chemin_langue/menu_638`," \
	"" "\Z2`cat $chemin_langue/menu_639` : " \
	"" "" \
	"" "\Z21) `cat $chemin_langue/menu_640`. " \
	"" "\Z22) `cat $chemin_langue/menu_641`\Zn\Z2. "
       case $? in
	    0)	exit
	    	;;
	    3)  ##### recherche d'une adresse ip sur le poste:
		runme recuperer_IP	# pour verifier ip fixe donne par OSCAR sur eth0
		if ( test -e /tmp/sortir )
		then
			rm -f /tmp/sortir
			exit
		fi
		##### l'ip est dans le fichier ip_installe_poste
		ip_installe=`cat ip_installe_poste`
		if [ "$ip_installe" = "" ]
		then
			runme lancer_dhcp
			if ( test -e /tmp/sortir )
			then
				rm -f /tmp/sortir
				exit
			fi
		fi
		run_oscar
		exit
		;;
	    1)	runme wizar
	    	exit
	    	;;
	    255) exit;;
	esac 
}
#----------------------------------------------------------------------------------------------------
#----------------------------------------------------------------------------------------------------
boite_commentaire