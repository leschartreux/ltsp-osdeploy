#	--cancel-label "Choisir une souris" \
#	--extra-button --extra-label "Annuler" \
	DIALOGRC="/etc/dialogmenu_bloque" dialog --colors --ok-label "Continuer" \
	--cancel-label "Annuler" \
	--backtitle "`cat /etc/banniere_oscar`" \
	--title " Informations sur les partitions " \
	--menu "\n \Zb\Z1                              ATTENTION : \n " 10 80 0 \
	"" "" \
	"" "\Z2Pour pouvoir restaurer des postes\Z4 CLIENTS\Z2 à partir d'une sauvegarde " \
	"" "\Z2partagée par un\Z4 SERVEUR\Z2, il faut que\Z1 TOUTES\Z2 les\Z1 partitions à restaurer " \
	"" "\Z2(souvent Windows) de\Z1 TOUS \Z2les\Z4 postes clients \Z2soient de la même\Z1 TAILLE\Z2. " \
	"" "" \
	"" "" \
	"" "\Z1Remarques : " \
	"" "" \
	"" "\ZnLa partition\Z2 linux\Zn est du type\Z2 ext3 ou ext4" \
	"" "\ZnLa partition\Z2 windows\Zn est du type\Z2 fat32\Zn ou\Z2 ntfs " \
	"" "" \
	"" "\Z1IMPORTANT : " \
	"" "" \
	"" "\Zb\Z2Pour modifier les partitions elles doivent TOUTES être\Zb\Z1 démontées. " \
	"" "\Zb\Z2Après chaque modification de taille ou de position \Zb\Z7redémarrez\Z2 le poste. " \
	"" ""
	case $? in
	0) ;;
	1) echo "" > /tmp/sortir ;;
	255) echo "" > /tmp/sortir ;;
	esac
