PATH="/usr/share/oscar/bin:$PATH"

	##### recherche d'une adresse ip sur le poste:
	rm -f /tmp/carte_ethi
	runme recuperer_IP	# pour verifier ip fixe donne par OSCAR sur eth0
	if ( test -e /tmp/sortir )
	then
		rm -f /tmp/sortir
	else
		##### l'ip est dans le fichier ip_installe_poste
		ip_installe=`cat ip_installe_poste`
		if [ "$ip_installe" = "" ]
		then
			runme lancer_dhcp
			rm -f /tmp/sortir
		fi
	fi

# pour JWM :
# echo "" > /tmp/temp_start_jwm
# echo "<StartupCommand>urxvt -sb -sl 2000 -bg black -fg white -e oscar</StartupCommand>" > /tmp/temp_start_jwm

# pour xfce :
grep -v "commande_demarrage_winmgr.sh" /root/.xinitrc > /tmp/xinitrc_temp
cp -f /tmp/xinitrc_temp /root/.xinitrc
rm -f /tmp/xinitrc_temp

# pour xfce :
# perl -pi -e 's/\# _\/usr\/bin\/terminal -e/\/usr\/bin\/terminal -e/g; s/\# _//g;' /root/.xinitrc
perl -pi -e 's/Hidden=true/Hidden=false/g;' /root/.config/autostart/Terminal.desktop 2>/dev/null

start_jwm
touch /tmp/tmp_oscarx
echo "forcevesa=1024x768x24" > /tmp/definition_vesa
config_lancex
rm -f /tmp/tmp_oscarx
rm -f /tmp/commande_demarrage_winmgr.sh

