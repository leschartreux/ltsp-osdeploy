# démonte le lecteur de disquette

partition_linux=sda5

mkdir /mnt/serveur_essai
mount /dev/$partition_linux /mnt/serveur_essai
cp /root/AUTHOR /mnt/serveur_essai


echo "/mnt/serveur_essai *(rw,sync,no_root_squash)" >> /etc/exports
/etc/init.d/nfs restart