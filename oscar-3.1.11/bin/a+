# monte le lecteur de disquette
	echo -en "Installez une disquette formatée \033[0;32mvfat\033[1;m dans le lecteur puis appuyez sur \033[1;33mEntrée\033[1;m"
	read choix
	mkdir /mnt/floppy
	mount -t vfat /dev/fd0 /mnt/floppy
	echo "Contenu de la disquette:"
	ls /mnt/floppy
echo
echo -e "\033[1;31mATTENTION avant d'enlever la disquette\033[1;m, démontez le lecteur avec \033[1;33ma-\033[1;m"
 texte_fin