PATH="/usr/share/oscar/bin:$PATH"
if ( test -e /usr/share/oscar/usr/choix_langue )
then
	choix_langue=`cat /usr/share/oscar/usr/choix_langue`
else
	echo "fr" > /usr/share/oscar/usr/choix_langue
	choix_langue=fr
	traduction
fi
chemin_langue=/usr/share/oscar/usr/langue/$choix_langue

# demarrage cdrom
# runme lancer_dhcp

ip_serveur=192.168.168.69
/etc/init.d/nfs restart

echo $ip_serveur:/tftpboot
mkdir /mnt/serveur_nfs

mount "$ip_serveur":/tftpboot /mnt/serveur_nfs 1>/dev/null 2>/dev/null

cp -fr /root/GNUstep /mnt/serveur_nfs/tmp_oscar_nfs/
echo "oui" > /mnt/serveur_nfs/tmp_oscar_nfs
